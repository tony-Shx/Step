<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/weather"
        android:background="#1e1e1e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/w1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/city_name111"
                android:hint="城市  "
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/set_area"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/city_name"
                android:background="@mipmap/menu1_m_1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/w2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/w1">
            <TextView
                android:id="@+id/publish_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:textColor="#fff"
                android:textSize="18dp"
                android:hint="Publish"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/w3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/w2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/weather_desp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:hint="时间"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/weather_content"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="#fff"
                android:hint="天气状态"/>

            <LinearLayout
                android:id="@+id/w4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/w3">
                <TextView
                    android:id="@+id/temp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:hint="temp1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="~"
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/temp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#fff"
                    android:hint="temp2"
                    android:textSize="18dp"/>



            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>
</LinearLayout>
